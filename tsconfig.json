{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "noEmit": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "./src",
    "pretty": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "./app", "./lib"]
}
